{
    "workbench.colorTheme": "Monokai",
    "editor.fontFamily": "'Inconsolata-g', 'Source Code Pro Semibold', 'SauceCodePro Nerd Font', 'Noto Color Emoji', 'monospace', monospace",
    "vim.leader": "<space>",

    "vim.insertModeKeyBindings": [
        {
          "before": ["j", "k"],
          "after": ["<Esc>"]
        },
      ],
      "vim.normalModeKeyBindingsNonRecursive": [
        {
          "before": ["<leader>", "/"],
          "commands": [":nohl"]
        },
        {
            "before": [":"],
            "commands": [
                "workbench.action.showCommands",
            ]
        },
        {
            "before": ["<leader>", "w"],
            "commands": [
                "workbench.action.files.save",
            ]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        }
      ],
      "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "p",
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        }
    ],
    "vim.handleKeys": {
    "<C-a>": false,
    },
    "vim.easymotion": true,
    "vim.replaceWithRegister": true,
    "vim.hlsearch": true,
    "vim.useSystemClipboard": true,
    "vim.gdefault": true,
    "vim.highlightedyank.enable": true,
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.camelCaseMotion.enable": true,
    "C_Cpp.updateChannel": "Insiders",
    "markdown.preview.fontFamily": "-apple-system, BlinkMacSystemFont, serif, 'Segoe WPC', 'Segoe UI', 'Ubuntu', 'Droid Sans', sans-serif"
}
